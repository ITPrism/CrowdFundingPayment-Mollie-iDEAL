<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" group="crowdfundingpayment" method="upgrade">
    <name>PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.9</version>
    <creationDate>16 November, 2014</creationDate>
    <description><![CDATA[
    <p>CrowdFunding Payment - Mollie iDEAL is a plugin that enables iDEAL payments via Mollie.</p>
    <p>Invest in the extension and help for its improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
    <p><a href='http://itprism.com/' target='_blank'>Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href='http://extensions.joomla.org/extensions/e-commerce/donations/23876' target='_blank'>vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_HELP_URL"/>
    
    <files>
        <filename plugin="mollieideal">mollieideal.php</filename>
		<filename>index.html</filename>
        
        <folder>images</folder>
		<folder>js</folder>
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_crowdfunding/models/fields">
    	        <field name="partner_id" type="text" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_PARTNER_ID" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_PARTNER_ID_DESC" />
    	        <field name="returnurl" type="text"  label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_RETURN_URL" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_RETURN_URL_DESC" class="span6" size="80" />
    	        <field name="reporturl" type="text"  label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_NOTIFY_URL" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_NOTIFY_URL_DESC" class="span6" size="80" default="index.php?option=com_crowdfunding&amp;task=notifier.notify&amp;format=raw&amp;payment_service=mollieideal" />
			</fieldset>

            <fieldset name="sandbox" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_TESTMODE">
                <field name="testmode" type="radio" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_ENABLE_TESTMODE" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_TESTMODE_DESC" class="btn-group" default="1">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            
            <fieldset name="emails" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_NOTIFICATION_EMAILS">
                <field name="admin_mail_id" type="cfemails" default="0" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_SEND_MAIL_ADMIN" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_SEND_MAIL_ADMIN_DESC" class="btn-group" />
                <field name="creator_mail_id" type="cfemails" default="0" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_SEND_MAIL_CREATOR" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_SEND_MAIL_CREATOR_DESC" class="btn-group" />
                <field name="user_mail_id" type="cfemails" default="0" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_SEND_MAIL_USER" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_SEND_MAIL_USER_DESC" class="btn-group" />

                <field name="email_mode" type="list" default="html" label="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_EMAIL_MODE" description="PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_EMAIL_MODE_DESC" >
                    <option value="plain">PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_PLAIN</option>
                    <option value="html">PLG_CROWDFUNDINGPAYMENT_MOLLIEIDEAL_HTML</option>
                </field>
            </fieldset>
        </fields>
	</config>
</extension>
